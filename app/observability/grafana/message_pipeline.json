{
  "title": "Chat4All - Message Pipeline",
  "description": "End-to-end message processing metrics including Kafka, workers, and delivery",
  "tags": ["chat4all", "messages", "kafka", "pipeline"],
  "timezone": "browser",
  "editable": true,
  "graphTooltip": 1,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "Message Throughput (msg/sec)",
      "type": "graph",
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "rate(messages_processed_total{status=\"success\"}[5m])",
          "legendFormat": "{{worker}} - Success",
          "refId": "A"
        },
        {
          "expr": "rate(messages_processed_total{status=\"failed\"}[5m])",
          "legendFormat": "{{worker}} - Failed",
          "refId": "B"
        }
      ],
      "yaxes": [
        {"format": "ops", "label": "Messages/sec"},
        {"format": "short"}
      ]
    },
    {
      "id": 2,
      "title": "Message Processing Latency (P50, P95, P99)",
      "type": "graph",
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(message_processing_duration_seconds_bucket[5m]))",
          "legendFormat": "P50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, rate(message_processing_duration_seconds_bucket[5m]))",
          "legendFormat": "P95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, rate(message_processing_duration_seconds_bucket[5m]))",
          "legendFormat": "P99",
          "refId": "C"
        }
      ],
      "yaxes": [
        {"format": "s", "label": "Latency"},
        {"format": "short"}
      ]
    },
    {
      "id": 3,
      "title": "Outbox Events - Pending",
      "type": "graph",
      "gridPos": {"x": 0, "y": 8, "w": 8, "h": 6},
      "targets": [
        {
          "expr": "outbox_pending_events",
          "legendFormat": "Pending Events",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "short", "label": "Events"},
        {"format": "short"}
      ],
      "alert": {
        "name": "High Outbox Backlog",
        "conditions": [
          {
            "evaluator": {"params": [1000], "type": "gt"},
            "operator": {"type": "and"},
            "query": {"params": ["A", "5m", "now"]},
            "reducer": {"params": [], "type": "avg"},
            "type": "query"
          }
        ],
        "executionErrorState": "alerting",
        "frequency": "1m",
        "handler": 1,
        "message": "Outbox event backlog exceeding 1000 events",
        "noDataState": "no_data"
      }
    },
    {
      "id": 4,
      "title": "Outbox Publishing Rate",
      "type": "graph",
      "gridPos": {"x": 8, "y": 8, "w": 8, "h": 6},
      "targets": [
        {
          "expr": "rate(outbox_published_total[5m])",
          "legendFormat": "{{event_type}} - Published",
          "refId": "A"
        },
        {
          "expr": "rate(outbox_failed_total[5m])",
          "legendFormat": "{{event_type}} - Failed",
          "refId": "B"
        }
      ],
      "yaxes": [
        {"format": "ops", "label": "Events/sec"},
        {"format": "short"}
      ]
    },
    {
      "id": 5,
      "title": "DLQ Messages",
      "type": "stat",
      "gridPos": {"x": 16, "y": 8, "w": 8, "h": 6},
      "targets": [
        {
          "expr": "increase(dlq_messages_total[1h])",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "orientation": "horizontal",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 10}
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Kafka Consumer Lag by Topic",
      "type": "graph",
      "gridPos": {"x": 0, "y": 14, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "kafka_consumer_lag",
          "legendFormat": "{{topic}} - Partition {{partition}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "short", "label": "Messages Behind"},
        {"format": "short"}
      ],
      "alert": {
        "name": "High Kafka Consumer Lag",
        "conditions": [
          {
            "evaluator": {"params": [10000], "type": "gt"},
            "operator": {"type": "and"},
            "query": {"params": ["A", "5m", "now"]},
            "reducer": {"params": [], "type": "max"},
            "type": "query"
          }
        ],
        "executionErrorState": "alerting",
        "frequency": "1m",
        "handler": 1,
        "message": "Kafka consumer lag exceeding 10,000 messages",
        "noDataState": "no_data"
      }
    },
    {
      "id": 7,
      "title": "Message Router - Channel Distribution",
      "type": "piechart",
      "gridPos": {"x": 12, "y": 14, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "sum by (channel) (rate(messages_processed_total{worker=\"message_router\"}[5m]))",
          "legendFormat": "{{channel}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": ["value", "percent"]
        },
        "pieType": "pie",
        "tooltip": {
          "mode": "single"
        }
      }
    },
    {
      "id": 8,
      "title": "Worker Health Status",
      "type": "table",
      "gridPos": {"x": 0, "y": 22, "w": 12, "h": 6},
      "targets": [
        {
          "expr": "up{job=~\"chat4all-workers.*\"}",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {"Time": true, "__name__": true},
            "indexByName": {},
            "renameByName": {
              "instance": "Instance",
              "job": "Worker",
              "Value": "Status"
            }
          }
        },
        {
          "id": "calculateField",
          "options": {
            "alias": "Health",
            "binary": {
              "left": "Status",
              "operator": "==",
              "right": "1"
            },
            "mode": "binary",
            "reduce": {
              "reducer": "sum"
            }
          }
        }
      ]
    },
    {
      "id": 9,
      "title": "Message Failure Rate (%)",
      "type": "graph",
      "gridPos": {"x": 12, "y": 22, "w": 12, "h": 6},
      "targets": [
        {
          "expr": "100 * rate(messages_processed_total{status=\"failed\"}[5m]) / rate(messages_processed_total[5m])",
          "legendFormat": "{{worker}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "percent", "label": "Failure Rate", "max": 100},
        {"format": "short"}
      ],
      "alert": {
        "name": "High Message Failure Rate",
        "conditions": [
          {
            "evaluator": {"params": [5], "type": "gt"},
            "operator": {"type": "and"},
            "query": {"params": ["A", "10m", "now"]},
            "reducer": {"params": [], "type": "avg"},
            "type": "query"
          }
        ],
        "executionErrorState": "alerting",
        "frequency": "1m",
        "handler": 1,
        "message": "Message failure rate exceeding 5%",
        "noDataState": "no_data"
      }
    },
    {
      "id": 10,
      "title": "File Processing Stats",
      "type": "stat",
      "gridPos": {"x": 0, "y": 28, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "rate(file_chunks_uploaded_total[5m])",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "orientation": "horizontal",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 5},
              {"color": "red", "value": 20}
            ]
          }
        }
      }
    },
    {
      "id": 11,
      "title": "File Upload Success Rate (%)",
      "type": "gauge",
      "gridPos": {"x": 6, "y": 28, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "100 * rate(file_uploads_total{status=\"completed\"}[5m]) / rate(file_uploads_total[5m])",
          "refId": "A"
        }
      ],
      "options": {
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 90},
              {"color": "green", "value": 99}
            ]
          }
        }
      }
    },
    {
      "id": 12,
      "title": "Redis Pub/Sub Operations",
      "type": "graph",
      "gridPos": {"x": 12, "y": 28, "w": 12, "h": 4},
      "targets": [
        {
          "expr": "rate(redis_pubsub_operations_total{operation=\"publish\"}[5m])",
          "legendFormat": "Publish",
          "refId": "A"
        },
        {
          "expr": "rate(redis_pubsub_operations_total{operation=\"subscribe\"}[5m])",
          "legendFormat": "Subscribe",
          "refId": "B"
        }
      ],
      "yaxes": [
        {"format": "ops", "label": "Operations/sec"},
        {"format": "short"}
      ]
    }
  ]
}
