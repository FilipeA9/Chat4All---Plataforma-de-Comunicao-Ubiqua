{
  "title": "Chat4All - API Health",
  "description": "Overall health and performance metrics for the Chat4All API",
  "tags": ["chat4all", "api", "health"],
  "timezone": "browser",
  "editable": true,
  "graphTooltip": 1,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "Request Rate (req/sec)",
      "type": "graph",
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "rate(http_requests_total{service=\"chat4all-api\"}[5m])",
          "legendFormat": "{{method}} {{endpoint}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "reqps", "label": "Requests/sec"},
        {"format": "short"}
      ]
    },
    {
      "id": 2,
      "title": "Error Rate (%)",
      "type": "graph",
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "100 * rate(http_requests_total{service=\"chat4all-api\",status=~\"5..\"}[5m]) / rate(http_requests_total{service=\"chat4all-api\"}[5m])",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "percent", "label": "Error Rate", "max": 100},
        {"format": "short"}
      ],
      "alert": {
        "name": "High API Error Rate",
        "conditions": [
          {
            "evaluator": {"params": [5], "type": "gt"},
            "operator": {"type": "and"},
            "query": {"params": ["A", "5m", "now"]},
            "reducer": {"params": [], "type": "avg"},
            "type": "query"
          }
        ],
        "executionErrorState": "alerting",
        "frequency": "1m",
        "handler": 1,
        "message": "API error rate is above 5%",
        "noDataState": "no_data"
      }
    },
    {
      "id": 3,
      "title": "Response Time (P50, P95, P99)",
      "type": "graph",
      "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{service=\"chat4all-api\"}[5m]))",
          "legendFormat": "P50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{service=\"chat4all-api\"}[5m]))",
          "legendFormat": "P95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{service=\"chat4all-api\"}[5m]))",
          "legendFormat": "P99",
          "refId": "C"
        }
      ],
      "yaxes": [
        {"format": "s", "label": "Latency"},
        {"format": "short"}
      ],
      "alert": {
        "name": "High API Latency P99",
        "conditions": [
          {
            "evaluator": {"params": [2], "type": "gt"},
            "operator": {"type": "and"},
            "query": {"params": ["C", "10m", "now"]},
            "reducer": {"params": [], "type": "avg"},
            "type": "query"
          }
        ],
        "executionErrorState": "alerting",
        "frequency": "1m",
        "handler": 1,
        "message": "API P99 latency is above 2 seconds",
        "noDataState": "no_data"
      }
    },
    {
      "id": 4,
      "title": "Active Connections",
      "type": "graph",
      "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "websocket_connections_total{service=\"chat4all-api\"}",
          "legendFormat": "WebSocket Connections",
          "refId": "A"
        },
        {
          "expr": "db_pool_connections_active{service=\"chat4all-api\"}",
          "legendFormat": "DB Pool Active",
          "refId": "B"
        },
        {
          "expr": "db_pool_connections_idle{service=\"chat4all-api\"}",
          "legendFormat": "DB Pool Idle",
          "refId": "C"
        }
      ],
      "yaxes": [
        {"format": "short", "label": "Connections"},
        {"format": "short"}
      ]
    },
    {
      "id": 5,
      "title": "Rate Limit Hits",
      "type": "stat",
      "gridPos": {"x": 0, "y": 16, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "rate(rate_limit_exceeded_total{service=\"chat4all-api\"}[5m]) OR on() vector(0)",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "orientation": "horizontal",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 10},
              {"color": "red", "value": 50}
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "title": "DB Pool Utilization (%)",
      "type": "gauge",
      "gridPos": {"x": 6, "y": 16, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "100 * db_pool_connections_active{service=\"chat4all-api\"} / (db_pool_connections_active{service=\"chat4all-api\"} + db_pool_connections_idle{service=\"chat4all-api\"})",
          "refId": "A"
        }
      ],
      "options": {
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      }
    },
    {
      "id": 7,
      "title": "API Instances",
      "type": "stat",
      "gridPos": {"x": 12, "y": 16, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "count(up{job=\"chat4all-api\"})",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "orientation": "horizontal",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 1},
              {"color": "green", "value": 2}
            ]
          }
        }
      }
    },
    {
      "id": 8,
      "title": "Uptime",
      "type": "stat",
      "gridPos": {"x": 18, "y": 16, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "time() - process_start_time_seconds{service=\"chat4all-api\"}",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "orientation": "horizontal",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 300},
              {"color": "green", "value": 3600}
            ]
          }
        }
      }
    },
    {
      "id": 9,
      "title": "Top 5 Slowest Endpoints (P99)",
      "type": "table",
      "gridPos": {"x": 0, "y": 20, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "topk(5, histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{service=\"chat4all-api\"}[5m])))",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {"Time": true},
            "indexByName": {},
            "renameByName": {
              "endpoint": "Endpoint",
              "method": "Method",
              "Value": "P99 Latency (s)"
            }
          }
        }
      ]
    },
    {
      "id": 10,
      "title": "Endpoint Status Code Distribution",
      "type": "piechart",
      "gridPos": {"x": 12, "y": 20, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "sum by (status) (rate(http_requests_total{service=\"chat4all-api\"}[5m]))",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": ["value", "percent"]
        },
        "pieType": "pie",
        "tooltip": {
          "mode": "single"
        }
      }
    }
  ]
}
